<?xml version="1.0" encoding="UTF-8"?>
<thing:thing-descriptions bindingId="plugwiseha" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:thing="http://eclipse.org/smarthome/schemas/thing-description/v1.0.0" xsi:schemaLocation="http://eclipse.org/smarthome/schemas/thing-description/v1.0.0 http://eclipse.org/smarthome/schemas/thing-description-1.0.0.xsd">
    
    <!--Zone Channels-->
    <channel-type id="type">
    	<item-type>String</item-type>
    	<label>Type</label>
    	<description>The type of the zone.</description>
    	<category>text</category>
    	<state readOnly="true"></state>
    </channel-type>
	<channel-type id="temperature">
		<item-type>Number:Temperature</item-type>
		<label>Temperature</label>
		<description>Current zone temperature.</description>
		<category>temperature</category>
		<state readOnly="true" pattern="%.1f %unit%">
		</state>
	</channel-type>
    <channel-type id="temperatureupdate">
        <item-type>DateTime</item-type>
        <label>Temperature Update</label>
        <description>Date and time from the last temperature update.</description>
        <category>calendar</category>
        <state readOnly="true"></state>
    </channel-type>
	<channel-type id="setpoint">
		<item-type>Number:Temperature</item-type>
		<label>Setpoint</label>
		<description>Gets or sets the setpoint of this zone.</description>
		<category>heating</category>
		<state readOnly="false" min="0.0" max="35.0" step="0.5" pattern="%.1f %unit%" />
	</channel-type>
	<channel-type id="setpointupdate">
		<item-type>DateTime</item-type>
		<label>Setpoint Update</label>
		<description>Date and time from the last setpoint update.</description>
		<category>calendar</category>
		<state readOnly="true"></state>
	</channel-type>
    <channel-type id="mode">
        <item-type>String</item-type>
        <label>Mode</label>
        <description>Mode of operation. Note: not used by Plugwise HA, only for Apple HomeKit and Google Home thermostat compatibility. Value is calculated based on the current temperature and setpoint and therefore read-only.</description>
        <category>heating</category>
        <state readOnly="true" pattern="%s">
            <options>
                <option value="on">On</option>
                <option value="off">Off</option>
                <option value="heating">Heating</option>
                <option value="cooling">Cooling</option>
            </options>
        </state>
    </channel-type>

    
    <!--Home Channels-->
    <channel-type id="outdoortemperature">
        <item-type>Number:Temperature</item-type>
        <label>Temperature</label>
        <description>Outdoor temperature.</description>
        <category>temperature</category>
        <state readOnly="true" pattern="%.1f %unit%">
        </state>
    </channel-type>
    <channel-type id="outdoorhumidity">
        <item-type>Number:Dimensionless</item-type>
        <label>Outdoor Humidity</label>
        <description>Outdoor humidity.</description>
        <category>humidity</category>
        <state readOnly="true" pattern="%.0f %%">
        </state>
    </channel-type>
    <channel-type id="solarirradiance">
        <item-type>Number:Dimensionless</item-type>
        <label>Solar Irradiance</label>
        <description>Solar irradiance (SI) is the power per unit area received from the Sun in the form of electromagnetic radiation.</description>
        <category>radiance</category>
        <state readOnly="true" pattern="%.1f W/mÂ²">
        </state>
    </channel-type>
    <channel-type id="windvector">
        <item-type>String</item-type>
        <label>Wind Vector</label>
        <description>The wind vector represents the motion of the airmass over the ground.</description>
        <category>flow</category>
        <state readOnly="true">
        </state>
    </channel-type>
    
    
    <!--Zone and Home Channels-->
    <channel-type id="preset">
        <item-type>String</item-type>
        <label>Preset</label>
        <description>Preset of the zone.</description>
        <category>text</category>
        <state readOnly="false" pattern="%s">
            <options>
                <option value="home">Home</option>
                <option value="away">Away</option>
                <option value="asleep">Night</option>
                <option value="vacation">Vacation</option>
                <option value="no_frost">Frost protection</option>
            </options>
        </state>
    </channel-type>
    
</thing:thing-descriptions>
